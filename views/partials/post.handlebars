<article class="post">
  <h2 class="post_title"><a href="/post/{{id}}">{{title}}</a></h2>
  
  {{!-- Conditionally render the "Edit My Post" button to show only if it is the user's post--}}
  {{!-- {{#if withAuth}} --}}
    <button type="submit" id="goto_edit_post">Edit My Post</button>
  {{!-- {{/if}} --}}
 
  <p class="post_author">By
    {{user.user_name}}
    on
    {{format_date date_created}}</p>
  <p class="post_content">{{content}}</p>

</article>
