<section class="posts_container">
    {{#each posts}}
        <article class="post">
        <h2 class="post_title"><a href="/post/{{id}}">{{title}}</a></h2>
        <p class="post_content">{{content}}</p>
        <p class="post_author">By {{user.user_name}} on {{format_date date_created}}</p>
        {{#each comments}}
            <p class="comment_author">By {{user.user_name}} on {{format_date date_created}}</p>
            <p class="comment_content">{{content}}</p>
        {{/each}}
        </article>
    {{/each}}
</section>
